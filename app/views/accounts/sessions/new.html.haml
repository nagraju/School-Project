= title do
  = "Login"
= description :textile do
  = "Got no account? *%s*" % link_to(t('formtastic.actions.account.new'), new_account_path)
  
= content do
  = login_link(:facebook)
  
  %hr.top
  
  - semantic_form_for(@account_session, :url => account_session_path) do |f|
    - flash_form_error(f, true)
    
    - f.inputs do
      = f.input :login, :required => true
      = f.input :password, :required => true
      = f.input :remember_me, :as => :boolean
      
    - f.buttons do
      = submit_button(f, t('formtastic.actions.account_session.create'))
      
  %ul.horizontal
    %li= link_to 'Forgot your password?', new_account_password_path
    %li= link_to 'Re-send confirmation instructions', new_account_confirmation_path
  