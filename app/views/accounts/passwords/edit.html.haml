= title do
  = "New password"
= description do
  = "Choose a new secure password for your account."
  
= content do
  - semantic_form_for(@account, :url => account_password_url, :html => {:method => :put}) do |f|
    - flash_form_error(f, true)
    
    - f.inputs do
      = f.input :perishable_token, :as => :hidden
      = f.input :password, :required => true
      = f.input :password_confirmation, :required => true
      
    - f.buttons do
      = submit_button(f, t('formtastic.actions.recoverable.update'))
      
%ul.horizontal
  %li= link_to t('actions.cancel'), new_account_session_path