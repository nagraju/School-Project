%h1 Forgot password
  
- semantic_form_for(@account, :url => account_password_url, :html => {:method => :post}) do |f|
  = f.error_messages if Settings.preferences.forms.error_messages
  
  - f.inputs do
    = f.input :email, :label => 'E-mail', :hint => ''
  
  - f.buttons do
    = f.commit_button 'Send me reset-instructions'
    
= link_to 'Login', new_account_session_path
|
= link_to 'Sign up', new_account_path
|
= link_to 'Resend confirmation instructions', new_account_confirmation_path
