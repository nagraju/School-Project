= title do
  Sign up
= description do
  Create a new account. Already got an account?
  %strong= link_to 'Login', new_account_session_path

- semantic_form_for(@account, :url => account_url) do |f|
  - flash_form_error(f)
  
  - f.inputs do
    = f.input :email, :required => true, :label => 'E-mail', :hint => 'Account confirmation instructions will be sent to this address, and will also be used as your account login username.'
    = f.input :password, :required => true, :label => 'Password', :hint => 'Choose a secret password.'
    = f.input :password_confirmation, :required => true, :label => 'Confirm Password', :hint => '...and type it again.'
    
  - f.buttons do
    = submit_button(f, 'Create my account')
    
- content_for :page_notice do
  = succeed '.' do
    By clicking on "Create my account" above, you confirm that you accept the
    = link_to 'Terms of Use', terms_path
    and
    = link_to 'Privacy Policy', privacy_path