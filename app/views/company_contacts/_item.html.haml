- content_tag_for(:tr, company_contact, :class => cycle(:odd, :even)) do
  %td.first_name= h company_contact.try(:first_name)
  %td.last_name= h company_contact.try(:last_name)
  %td.position= h company_contact.try(:position)
  %td.email= h company_contact.try(:email)
  %td.mobile= h company_contact.try(:mobile)
  %td.phone= h company_contact.try(:phone)
  %td.company= h company_contact.try(:company)
  %td.actions
    = link_to 'Show', company_contact_path(company_contact)
    |
    = link_to 'Edit', edit_company_contact_path(company_contact)
    |
    = link_to 'Destroy', company_contact, :confirm => 'Are you sure?', :method => :delete