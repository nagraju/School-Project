- content_tag_for(:tr, prize, :class => cycle(:odd, :even)) do
  %td.title= h prize.try(:title)
  %td.prize_category= h prize.try(:prize_category)
  %td.prize_presentation= h prize.try(:prize_presentation)
  %td.actions
    = link_to 'Show', prize_path(prize)
    |
    = link_to 'Edit', edit_prize_path(prize)
    |
    = link_to 'Destroy', prize, :confirm => 'Are you sure?', :method => :delete