%h1.heading
  = "Categories"
  
%p.actions
  = link_to 'New Category', new_category_path
  
%table
  %thead.header
    %tr
      %th.name= 'Name'
      %th.description= 'Description'
      %th.actions= 'Actions'
  %tbody.items.categories
    - @categories.each do |category|
      = render 'item', :category => category
      
= will_paginate(@categories)
