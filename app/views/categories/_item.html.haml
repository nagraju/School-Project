- content_tag_for(:tr, category, :class => cycle(:odd, :even)) do
  %td.name= h category.try(:name)
  %td.description= h category.try(:description)
  %td.actions
    = link_to 'Show', category_path(category)
    |
    = link_to 'Edit', edit_category_path(category)
    |
    = link_to 'Destroy', category, :confirm => 'Are you sure?', :method => :delete